@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OnlineClinic</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/OnlineClinic.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-0">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">OnlineClinic</a>

                <div class="d-flex ms-auto">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <span class="navbar-text me-3">
                            @User.Identity.Name
                        </span>
                        <form asp-area="" asp-controller="Login" asp-action="Logout" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-outline-danger btn-sm">Logout</button>
                        </form>
                    }
                </div>
            </div>
        </nav>
    </header>

    <div class="d-flex" id="layout-wrapper">
        @if (User.Identity.IsAuthenticated)
        {
            bool isDoctor = User.IsInRole("Doctor");
            bool isPatient = User.IsInRole("Patient");

            <nav id="sidebar" class="bg-light border-end">
                <ul class="nav flex-column sidebar-nav">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Dashboard" asp-action="Index">
                            Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Appointments" asp-action="Index">
                            Appointments
                        </a>
                    </li>

                    @* Doctors link: hidden for Doctor role *@
                    @if (!isDoctor)
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Doctors" asp-action="Index">
                                Doctors
                            </a>
                        </li>
                    }

                    @* Patients link: hidden for Patient role *@
                    @if (!isPatient)
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Patients" asp-action="Index">
                                Patients
                            </a>
                        </li>
                    }

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Consultations" asp-action="Index">
                            Consultations
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Profile" asp-action="Index">
                            Profile
                        </a>
                    </li>
                </ul>
            </nav>
        }

        <div class="flex-grow-1" id="content-wrapper">
            <div class="container-fluid pt-3">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>

            <footer class="border-top footer text-muted mt-auto">
                <div class="container">
                    &copy; 2025 - OnlineClinic
                </div>
            </footer>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>