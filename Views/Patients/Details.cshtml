@model OnlineClinic.Models.Patient
@{
    ViewData["Title"] = "Patient Details";
    var canManage = ViewBag.CanManage ?? false;
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">

<h2>Patient Details</h2>
<div class="card mb-4">
    <div class="card-body">
        <h5>@Model.Name</h5>
        <p><b>Admission Date:</b> @(Model.AdmissionDate?.ToString("yyyy-MM-dd") ?? "")</p>
        <p><b>Contact:</b> @Model.ContactInfo</p>
        <p><b>Age:</b> @Model.Age</p>
        <p><b>Gender:</b> @Model.Gender</p>
        <p><b>Room Number:</b> @Model.RoomNumber</p>
        <p><b>Emergency Contact:</b> @Model.EmergencyContact</p>
        <p><b>Assigned Doctor:</b> @ViewBag.AssignedDoctorName</p>
        <button type="button" class="btn btn-info" onclick="showMedicalHistory(@Model.PatientId)">
            View Medical History
        </button>
        <a class="btn btn-secondary ms-2" href="@Url.Action("Index", "Patients")">Back to List</a>
    </div>
</div>

<!-- Medical History Modal (View/Add/Edit) -->
<div class="modal fade" id="medicalHistoryModal" tabindex="-1" aria-labelledby="medicalHistoryLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="medicalHistoryLabel">Medical History</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="medicalHistoryModalBody"></div>
        </div>
    </div>
</div>

<!-- Medical History Add/Edit Modal -->
<div class="modal fade" id="medicalHistoryEditModal" tabindex="-1" aria-labelledby="medicalHistoryEditModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form id="mh-form">
                <div class="modal-header">
                    <h5 class="modal-title" id="medicalHistoryEditModalLabel">Add/Edit Medical History</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div id="mh-error" class="alert alert-danger d-none"></div>
                    <input type="hidden" id="mh-id" name="medicalHistoryId" />
                    <input type="hidden" id="mh-patient-id" name="patientId" value="@Model.PatientId" />
                    <div class="mb-2">
                        <label for="mh-date">Date</label>
                        <input type="date" id="mh-date" name="startDate" class="form-control" required />
                    </div>
                    <div class="mb-2">
                        <label for="mh-diagnosis">Diagnosis</label>
                        <input id="mh-diagnosis" name="diagnosis" class="form-control" required />
                    </div>
                    <div class="mb-2">
                        <label for="mh-description">Description</label>
                        <textarea id="mh-description" name="description" class="form-control" required></textarea>
                    </div>
                    <div class="mb-2">
                        <label for="mh-notes">Notes</label>
                        <textarea id="mh-notes" name="notes" class="form-control"></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-success">Save</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Role-check for JS -->
<script>
    window.canManage = @(canManage ? "true" : "false");
</script>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="~/js/patient.js"></script>