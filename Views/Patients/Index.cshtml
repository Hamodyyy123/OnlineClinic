@model IEnumerable<OnlineClinic.Models.Patient>
@{
    ViewData["Title"] = "Patient List";
    var canManage = ViewBag.CanManage ?? false;
    var doctors = (ViewBag.Doctors as List<OnlineClinic.Models.User>) ?? new List<OnlineClinic.Models.User>();
}
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/Patients.css" asp-append-version="true" />

<div class="patient-page-wrapper">
    <!-- Hero -->
    <section class="patient-hero">
        <div class="patient-hero-bg"></div>
        <div class="container patient-hero-content">
            <div class="patient-hero-text">
                <h1>Patients</h1>
                <p>Overview of all registered patients, their contact details and attending doctors.</p>
            </div>
            <div class="patient-hero-meta">
                <div class="patient-stat-card">
                    <span class="patient-stat-label">Total Patients</span>
                    <span class="patient-stat-value">@Model?.Count() ?? 0</span>
                </div>
            </div>
        </div>
    </section>

    <!-- Main content -->
    <section class="container patient-main">
        <div class="patient-list-card">
            <div class="patient-list-header">
                <h2>Patient Directory</h2>
                @if (canManage)
                {
                    <button class="btn btn-success btn-sm" onclick="openCreatePatientModal()">+ Add Patient</button>
                }
            </div>

            <div class="table-responsive">
                <table class="patient-table">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Age</th>
                            <th>Gender</th>
                            <th>Contact</th>
                            <th>Room</th>
                            <th>Admission Date</th>
                            <th>Doctor</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var p in Model ?? Enumerable.Empty<OnlineClinic.Models.Patient>())
                        {
                            var doc = doctors?.FirstOrDefault(d => d.UserId == p.AssignedDoctor);
                            <tr>
                                <td>@p.Name</td>
                                <td>@p.Age</td>
                                <td>
                                    @if (!string.IsNullOrEmpty(p.Gender))
                                    {
                                        <span class="patient-pill">@p.Gender</span>
                                    }
                                </td>
                                <td>@p.ContactInfo</td>
                                <td>@p.RoomNumber</td>
                                <td>@(p.AdmissionDate?.ToString("yyyy-MM-dd") ?? "")</td>
                                <td>@(doc?.Name ?? "")</td>
                                <td>
                                    <a class="btn btn-detail btn-sm" href="@Url.Action("Details", "Patients", new { id = p.PatientId })">Details</a>
                                    @if (canManage)
                                    {
                                        <button class="btn btn-edit btn-sm ms-1" onclick="openEditPatientModal(@p.PatientId)">Edit</button>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </section>
</div>

<!-- Add/Edit Patient Modal -->
<div class="modal fade" id="patientModal" tabindex="-1" aria-labelledby="patientModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg patient-modal-dialog">
        <div class="modal-content patient-modal-content">
            <form id="patientForm">
                <div class="modal-header patient-modal-header">
                    <div>
                        <h5 class="modal-title" id="patientModalLabel">Patient</h5>
                        <p class="text-secondary mb-0" style="font-size: var(--font-size-sm);">
                            Fill in basic info and assign a doctor for this patient.
                        </p>
                    </div>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body patient-modal-body">
                    <div id="modal-error" class="alert alert-danger d-none"></div>
                    <input type="hidden" id="modalPatientId" name="PatientId" />
                    <input type="hidden" id="modalUserId" name="UserId" />

                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label">Name</label>
                            <input class="form-control" id="userName" name="userName" required />
                            <label class="form-label mt-3">Email</label>
                            <input class="form-control" id="userEmail" name="userEmail" required />
                            <label class="form-label mt-3">Username</label>
                            <input class="form-control" id="userUsername" name="userUsername" required />
                            <label class="form-label mt-3">Password</label>
                            <input type="password" class="form-control" id="userPassword" name="userPassword" required />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Age</label>
                            <input type="number" class="form-control" id="patientAge" name="patientAge" />
                            <label class="form-label mt-3">Gender</label>
                            <select class="form-control" id="patientGender" name="patientGender">
                                <option value="">Select</option>
                                <option value="Male">Male</option>
                                <option value="Female">Female</option>
                            </select>
                            <label class="form-label mt-3">Contact Info</label>
                            <input class="form-control" id="patientContactInfo" name="patientContactInfo" />
                            <label class="form-label mt-3">Emergency Contact</label>
                            <input class="form-control" id="patientEmergencyContact" name="patientEmergencyContact" />
                            <label class="form-label mt-3">Room Number</label>
                            <input class="form-control" id="patientRoomNumber" name="patientRoomNumber" />
                            <label class="form-label mt-3">Admission Date</label>
                            <input type="date" class="form-control" id="patientAdmissionDate" name="patientAdmissionDate" />
                            <label class="form-label mt-3">Doctor</label>
                            <select class="form-control" id="assignedDoctor" name="assignedDoctor">
                                <option value="">-- Select Doctor --</option>
                                @foreach (var d in doctors)
                                {
                                    <option value="@d.UserId">@d.Name</option>
                                }
                            </select>
                        </div>
                    </div>
                </div>
                <div class="modal-footer patient-modal-footer">
                    <button type="submit" id="modalSaveBtn" class="btn btn-success">Save</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/patient.js" asp-append-version="true"></script>