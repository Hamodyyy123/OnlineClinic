@model IEnumerable<OnlineClinic.Models.Doctor>
@{
    ViewData["Title"] = "Doctors";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">

<h2>Doctors</h2>
<button class="btn btn-success mb-3" onclick="openCreateDoctorModal()">Add Doctor</button>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Speciality</th>
            <th>Created At</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var doctor in Model)
        {
            <tr>
                <td>@doctor.Name</td>
                <td>@doctor.Email</td>
                <td>@doctor.Phone</td>
                <td>@doctor.Speciality</td>
                <td>@(doctor.CreatedAt?.ToString("yyyy-MM-dd HH:mm") ?? "")</td>
                <td>
                    <button class="btn btn-warning btn-sm" onclick="openEditDoctorModal(@doctor.DoctorId)">Edit</button>
                    <button class="btn btn-danger btn-sm" onclick="deleteDoctor(@doctor.DoctorId)">Delete</button>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Create/Edit Doctor Modal -->
<div class="modal fade" id="doctorModal" tabindex="-1" aria-labelledby="doctorModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form id="doctorModalForm">
                <div class="modal-header">
                    <h5 class="modal-title" id="doctorModalLabel">Add/Edit Doctor</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div id="doctorModal-error" class="alert alert-danger d-none"></div>
                    <input type="hidden" id="doctorId" />
                    <input type="hidden" id="userId" />
                    <div class="mb-2">
                        <label for="doctorName">Name</label>
                        <input type="text" id="doctorName" class="form-control" required />
                    </div>
                    <div class="mb-2">
                        <label for="doctorEmail">Email</label>
                        <input type="email" id="doctorEmail" class="form-control" required />
                    </div>
                    <div class="mb-2">
                        <label for="doctorUsername">Username</label>
                        <input type="text" id="doctorUsername" class="form-control" required />
                    </div>
                    <div class="mb-2">
                        <label for="doctorPassword">Password</label>
                        <input type="password" id="doctorPassword" class="form-control" required />
                    </div>
                    <div class="mb-2">
                        <label for="doctorPhone">Phone</label>
                        <input type="text" id="doctorPhone" class="form-control" />
                    </div>
                    <div class="mb-2">
                        <label for="doctorSpeciality">Speciality</label>
                        <input type="text" id="doctorSpeciality" class="form-control" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" id="doctorModalSaveBtn" class="btn btn-success">Save</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="~/js/Doctors.js"></script>