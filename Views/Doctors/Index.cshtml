@model IEnumerable<OnlineClinic.Models.Doctor>
@{
    ViewData["Title"] = "Doctors";
    // read-only mode: Patient role or explicit query ?mode=view
    bool isPatient = User.IsInRole("Patient");
    bool isDoctor = User.IsInRole("Doctor");
    var queryMode = Context?.Request?.Query["mode"].ToString() ?? "";
    bool isReadOnlyMode = isPatient || string.Equals(queryMode, "view", System.StringComparison.OrdinalIgnoreCase);
    var doctors = Model ?? Enumerable.Empty<OnlineClinic.Models.Doctor>();
}

<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/doctors.css" asp-append-version="true" />

<div class="doctors-page-wrapper" data-readonly="@isReadOnlyMode.ToString().ToLower()">
    <!-- Hero -->
    <section class="doctors-hero">
        <div class="doctors-hero-bg"></div>
        <div class="container doctors-hero-content">
            <div class="doctors-hero-text">
                <h1>Doctors</h1>
                <p>Manage your clinic’s medical staff, specialties, and contact information in one place.</p>
            </div>
            <div class="doctors-hero-meta">
                <div class="doctors-stat-card">
                    <span class="doctors-stat-label">Total Doctors</span>
                    <span class="doctors-stat-value">@doctors.Count()</span>
                </div>

                @* Add button hidden for read-only users (patients or view mode) and also hidden for doctor role *@
                @if (!isReadOnlyMode && !isDoctor)
                {
                    <button class="btn btn-success btn-sm btn-add-doctor" type="button" onclick="openCreateDoctorModal()">
                        + Add Doctor
                    </button>
                }
            </div>
        </div>
    </section>

    <!-- Main content -->
    <section class="container doctors-main">
        <div class="card doctors-table-card">
            <div class="card-header doctors-table-header">
                <h3>Doctors Directory</h3>
                <p class="doctors-table-subtitle">
                    A quick overview of all doctors, their specialties, and contact details.
                </p>
            </div>
            <div class="card-body doctors-table-wrapper">
                <div class="table-responsive">
                    <table class="table table-hover align-middle doctors-table">
                        <thead>
                            <tr>
                                <th>Doctor</th>
                                <th>Email</th>
                                <th>Phone</th>
                                <th>Speciality</th>
                                <th>Reserved Times</th>
                                <th class="doctors-actions-col"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (!doctors.Any())
                            {
                                <tr>
                                    <td colspan="6" class="text-center text-muted p-4">No doctors found.</td>
                                </tr>
                            }
                            else
                            {
                                foreach (var doctor in doctors)
                                {
                                    var initial = string.IsNullOrEmpty(doctor.Name) ? "D" : doctor.Name.Trim()[0].ToString().ToUpper();
                                    <tr>
                                        <td>
                                            <div class="doctors-name-cell">
                                                <div class="doctors-avatar">
                                                    <span>@initial</span>
                                                </div>
                                                <div>
                                                    <div class="doctors-name">@doctor.Name</div>
                                                    <div class="text-muted small">@doctor.Speciality</div>
                                                </div>
                                            </div>
                                        </td>
                                        <td>@doctor.Email</td>
                                        <td>@doctor.Phone</td>
                                        <td>@doctor.Speciality</td>
                                        <td>
                                            <a class="text-decoration-none small" href="@Url.Action("Index", "Appointments", new { doctorId = doctor.DoctorId })">
                                                View Schedule
                                            </a>
                                        </td>
                                        <td>
                                            <div class="d-flex align-items-center gap-2">
                                                <a class="btn btn-detail btn-sm" href="@Url.Action("Index", "Appointments", new { doctorId = doctor.DoctorId })">Schedule</a>

                                                @* Edit/Delete only for non-readonly users (Admins) *@
                                                @if (!isReadOnlyMode)
                                                {
                                                    <button class="btn btn-warning btn-sm" onclick="openEditDoctorModal(@doctor.DoctorId)">Edit</button>
                                                    <button class="btn btn-danger btn-sm" onclick="deleteDoctor(@doctor.DoctorId)">Delete</button>
                                                }
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>
</div>

<!-- Create/Edit Doctor Modal -->
<div class="modal fade" id="doctorModal" tabindex="-1" aria-labelledby="doctorModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered doctors-modal-dialog">
        <div class="modal-content doctors-modal-content">
            <form id="doctorModalForm">
                <div class="modal-header doctors-modal-header">
                    <div>
                        <h5 class="modal-title" id="doctorModalLabel">Add/Edit Doctor</h5>
                        <p class="doctors-modal-subtitle">
                            Fill in the details below to add a new doctor or update an existing one.
                        </p>
                    </div>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div id="doctorModal-error" class="alert alert-danger d-none mb-3"></div>
                    <input type="hidden" id="doctorId" />
                    <input type="hidden" id="userId" />

                    <div class="row g-3">
                        <div class="col-md-6">
                            <label for="doctorName" class="form-label">Name</label>
                            <input type="text" id="doctorName" class="form-control" required />
                        </div>
                        <div class="col-md-6">
                            <label for="doctorEmail" class="form-label">Email</label>
                            <input type="email" id="doctorEmail" class="form-control" required />
                        </div>
                        <div class="col-md-6">
                            <label for="doctorUsername" class="form-label">Username</label>
                            <input type="text" id="doctorUsername" class="form-control" required />
                        </div>
                        <div class="col-md-6">
                            <label for="doctorPassword" class="form-label">Password</label>
                            <input type="password" id="doctorPassword" class="form-control" required />
                        </div>
                        <div class="col-md-6">
                            <label for="doctorPhone" class="form-label">Phone</label>
                            <input type="text" id="doctorPhone" class="form-control" />
                        </div>
                        <div class="col-md-6">
                            <label for="doctorSpeciality" class="form-label">Speciality</label>
                            <input type="text" id="doctorSpeciality" class="form-control" />
                        </div>
                    </div>
                </div>
                <div class="modal-footer doctors-modal-footer">
                    <button type="button" id="doctorModalSaveBtn" class="btn btn-success">Save</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/Doctors.js" asp-append-version="true"></script>