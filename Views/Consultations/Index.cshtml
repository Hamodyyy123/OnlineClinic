@* Views/Consultations/Index.cshtml *@
@{
    ViewData["Title"] = "Consultations";
}

<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/Consultations.Css" asp-append-version="true" />

<div class="consult-page-wrapper">
    <!-- Hero / Header -->
    <section class="consult-hero">
        <div class="consult-hero-bg"></div>
        <div class="container consult-hero-content">
            <div class="consult-hero-text">
                <h1>Running Consultations</h1>
                <p>Monitor active consultations and join secure chat rooms between doctors and patients.</p>
            </div>
            <div class="consult-hero-meta">
                <div class="consult-stat-card">
                    <span class="consult-stat-label">Active</span>
                    <span class="consult-stat-value" id="consultActiveCount">–</span>
                </div>
                <div class="consult-stat-card">
                    <span class="consult-stat-label">Completed</span>
                    <span class="consult-stat-value" id="consultCompletedCount">–</span>
                </div>
            </div>
        </div>
    </section>

    <!-- Main content -->
    <section class="container consult-main">
        <div id="consultation-error" class="alert alert-danger d-none mb-3"></div>

        <div class="card consult-table-card">
            <div class="card-header consult-table-header">
                <h3>Current Consultations</h3>
                <span class="consult-table-meta" id="consultSummary">Loading…</span>
            </div>
            <div class="card-body consult-table-wrapper">
                <div class="table-responsive">
                    <table class="table table-hover align-middle consult-table" id="runningAppointmentsTable">
                        <thead>
                            <tr>
                                <th>Doctor</th>
                                <th>Patient</th>
                                <th>Start</th>
                                <th>End</th>
                                <th>Status</th>
                                <th class="consult-actions-col"></th>
                            </tr>
                        </thead>
                        <tbody id="runningAppointmentsBody">
                            <!-- filled by JS -->
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>
</div>

<!-- Consultation Modal (Chat Room) -->
<div class="modal fade" id="consultationModal" tabindex="-1" aria-labelledby="consultationModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-xl consult-modal-dialog">
        <div class="modal-content consult-modal-content">
            <div class="modal-header consult-modal-header">
                <div>
                    <h5 class="modal-title" id="consultationModalLabel">Consultation</h5>
                    <p class="consult-modal-subtitle">
                        Real-time conversation between doctor and patient, plus notes and diagnosis.
                    </p>
                </div>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body consult-modal-body">

                <div id="consultation-modal-error" class="alert alert-danger d-none mb-3"></div>

                <!-- Header info -->
                <div class="consult-info-card">
                    <div class="consult-info-main">
                        <div class="consult-avatar doctor">
                            <span>D</span>
                        </div>
                        <div>
                            <div class="consult-info-row">
                                <span class="consult-info-label">Doctor</span>
                                <span class="consult-info-value" id="m-doctorName"></span>
                            </div>
                            <div class="consult-info-row">
                                <span class="consult-info-label">Patient</span>
                                <span class="consult-info-value" id="m-patientName"></span>
                            </div>
                        </div>
                    </div>
                    <div class="consult-info-meta">
                        <div class="consult-info-row">
                            <span class="consult-info-label">Time</span>
                            <span class="consult-info-value">
                                <span id="m-startTime"></span> – <span id="m-endTime"></span>
                            </span>
                        </div>
                        <div class="consult-info-row">
                            <span class="consult-info-label">Status</span>
                            <span class="consult-status-pill" id="m-status"></span>
                        </div>
                    </div>
                </div>

                <!-- Main layout: left (problem + chat), right (notes) -->
                <div class="row g-3 consult-modal-layout">
                    <div class="col-lg-8">
                        <!-- Patient Problem -->
                        <div class="card consult-card mb-3">
                            <div class="card-header consult-card-header">
                                <h6>Patient Problem</h6>
                            </div>
                            <div class="card-body">
                                <div id="m-problem-edit" class="d-none">
                                    <p class="consult-section-text">
                                        Describe your problem / reason for this consultation:
                                    </p>
                                    <textarea id="m-chiefComplaintInput" class="form-control" rows="3"></textarea>
                                    <button type="button" id="m-saveChiefComplaintBtn" class="btn btn-primary mt-2">
                                        Save
                                    </button>
                                    <div id="m-chiefComplaintMsg" class="text-success mt-1 d-none">Saved.</div>
                                </div>
                                <div id="m-problem-view" class="d-none mt-2">
                                    <p class="mb-1"><strong>Patient's complaint:</strong></p>
                                    <p id="m-chiefComplaintText" class="consult-complaint-text"></p>
                                </div>
                            </div>
                        </div>

                        <!-- Chat -->
                        <div class="card consult-card">
                            <div class="card-header consult-card-header">
                                <h6>Chat</h6>
                            </div>
                            <div class="card-body">
                                <div id="m-chatMessages" class="consult-chat-box">
                                    <!-- messages will be added here by JS -->
                                </div>
                                <div class="input-group mt-2">
                                    <input type="text" id="m-chatInput" class="form-control" placeholder="Type a message..." />
                                    <button class="btn btn-primary" id="m-chatSendBtn" type="button">Send</button>
                                </div>
                                <small class="text-muted d-block mt-1">
                                    Temporary chat: messages are not stored in the database.
                                </small>
                            </div>
                        </div>
                    </div>

                    <!-- Doctor notes -->
                    <div class="col-lg-4">
                        <div id="m-doctor-notes-card" class="card consult-card d-none">
                            <div class="card-header consult-card-header">
                                <h6>Doctor's Notes</h6>
                            </div>
                            <div class="card-body">
                                <div class="mb-2">
                                    <label for="m-diagnosisInput" class="form-label">
                                        <strong>Diagnosis</strong>
                                    </label>
                                    <textarea id="m-diagnosisInput" class="form-control" rows="2"></textarea>
                                </div>
                                <div class="mb-2">
                                    <label for="m-medicationsInput" class="form-label">
                                        <strong>Medications / Prescription</strong>
                                    </label>
                                    <textarea id="m-medicationsInput" class="form-control" rows="3"></textarea>
                                </div>
                                <button type="button" id="m-saveDiagnosisBtn" class="btn btn-primary w-100 mb-2">
                                    Save Diagnosis &amp; Medications
                                </button>
                                <button type="button" id="m-endConsultationBtn" class="btn btn-danger w-100">
                                    End Consultation
                                </button>
                                <div id="m-doctorSaveMsg" class="text-success mt-1 d-none text-center">Saved.</div>
                            </div>
                        </div>
                    </div>
                </div>

                <input type="hidden" id="m-consultationId" value="" />
                <input type="hidden" id="m-currentUserRole" value="" />
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/Consultations.js" asp-append-version="true"></script>
}