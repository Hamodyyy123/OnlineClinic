@* Views/Consultations/Index.cshtml *@
@{
    ViewData["Title"] = "Consultations";
}

<h2>Running Consultations</h2>

<div id="consultation-error" class="alert alert-danger d-none"></div>

<table class="table table-bordered" id="runningAppointmentsTable">
    <thead>
        <tr>
            <th>Doctor</th>
            <th>Patient</th>
            <th>Start</th>
            <th>End</th>
            <th>Status</th>
            <th></th>
        </tr>
    </thead>
    <tbody id="runningAppointmentsBody">
        <!-- filled by JS -->
    </tbody>
</table>

<!-- Consultation Modal (Chat Room) -->
<div class="modal fade" id="consultationModal" tabindex="-1" aria-labelledby="consultationModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="consultationModalLabel">Consultation</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">

                <div id="consultation-modal-error" class="alert alert-danger d-none"></div>

                <div class="mb-2">
                    <strong>Doctor:</strong> <span id="m-doctorName"></span><br />
                    <strong>Patient:</strong> <span id="m-patientName"></span><br />
                    <strong>Time:</strong> <span id="m-startTime"></span> - <span id="m-endTime"></span><br />
                    <strong>Status:</strong> <span id="m-status"></span>
                </div>

                <hr />

                <div class="card mb-3">
                    <div class="card-header">
                        Patient Problem
                    </div>
                    <div class="card-body">
                        <div id="m-problem-edit" class="d-none">
                            <p>Describe your problem / reason for this consultation:</p>
                            <textarea id="m-chiefComplaintInput" class="form-control" rows="3"></textarea>
                            <button type="button" id="m-saveChiefComplaintBtn" class="btn btn-primary mt-2">Save</button>
                            <div id="m-chiefComplaintMsg" class="text-success mt-1 d-none">Saved.</div>
                        </div>
                        <div id="m-problem-view" class="d-none">
                            <p><strong>Patient's complaint:</strong></p>
                            <p id="m-chiefComplaintText"></p>
                        </div>
                    </div>
                </div>

                <div class="card mb-3">
                    <div class="card-header">
                        Chat
                    </div>
                    <div class="card-body">
                        <div id="m-chatMessages" style="height:200px; border:1px solid #ccc; padding:8px; overflow-y:auto;">
                            <!-- messages will be added here by JS -->
                        </div>
                        <div class="input-group mt-2">
                            <input type="text" id="m-chatInput" class="form-control" placeholder="Type a message..." />
                            <button class="btn btn-primary" id="m-chatSendBtn" type="button">Send</button>
                        </div>
                        <small class="text-muted">Temporary chat: messages are not stored in the database.</small>
                    </div>
                </div>

                <div id="m-doctor-notes-card" class="card mb-3 d-none">
                    <div class="card-header">
                        Doctor's Notes
                    </div>
                    <div class="card-body">
                        <div class="mb-2">
                            <label for="m-diagnosisInput" class="form-label"><strong>Diagnosis</strong></label>
                            <textarea id="m-diagnosisInput" class="form-control" rows="2"></textarea>
                        </div>
                        <div class="mb-2">
                            <label for="m-medicationsInput" class="form-label"><strong>Medications / Prescription</strong></label>
                            <textarea id="m-medicationsInput" class="form-control" rows="3"></textarea>
                        </div>
                        <button type="button" id="m-saveDiagnosisBtn" class="btn btn-primary">Save Diagnosis &amp; Medications</button>
                        <button type="button" id="m-endConsultationBtn" class="btn btn-danger ms-2">End Consultation</button>
                        <div id="m-doctorSaveMsg" class="text-success mt-1 d-none">Saved.</div>
                    </div>
                </div>

                <input type="hidden" id="m-consultationId" value="" />
                <input type="hidden" id="m-currentUserRole" value="" />
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/Consultations.js"></script>
}