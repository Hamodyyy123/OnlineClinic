    <!-- Removed client-side login modal so Login link always redirects to /Login/Index -->
    <!-- Booking Modal (kept) -->
    <div id="bookingModal" class="modal" style="display:none;">
        <div class="modal-content">
            <span class="close-modal">&times;</span>
            <h2>Book Your Consultation</h2>
            <form id="bookingForm" class="modal-form" action="/Home/Book" method="post">
                <input type="text" id="patientName" name="patientName" placeholder="Your Name" required />
                <input type="email" id="patientEmail" name="patientEmail" placeholder="Email Address" required />
                <input type="tel" id="patientPhone" name="patientPhone" placeholder="Phone Number" required />
                <select id="doctorSelect" name="doctorSelect" required>
                    <option value="">Select a Doctor</option>
                    <option value="Dr. Ahmed Hassan">Dr. Ahmed Hassan - General Physician</option>
                    <option value="Dr. Sarah Ali">Dr. Sarah Ali - Pediatrician</option>
                    <option value="Dr. Mohammed Khalil">Dr. Mohammed Khalil - Cardiologist</option>
                </select>
                <input type="date" id="appointmentDate" name="appointmentDate" required />
                <select id="appointmentTime" name="appointmentTime" required>
                    <option value="">Select Time</option>
                    <option value="09:00 AM">09:00 AM</option>
                    <option value="10:00 AM">10:00 AM</option>
                    <option value="11:00 AM">11:00 AM</option>
                    <option value="02:00 PM">02:00 PM</option>
                    <option value="03:00 PM">03:00 PM</option>
                    <option value="04:00 PM">04:00 PM</option>
                </select>
                <textarea id="appointmentReason" name="appointmentReason" placeholder="Reason for consultation" rows="3" required></textarea>
                <button type="submit" class="btn-primary">Confirm Booking</button>
            </form>
        </div>
    </div>

    <!-- Success Message -->
    <div id="successMessage" class="success-message" style="display:none;"><span id="successText">Success!</span></div>

