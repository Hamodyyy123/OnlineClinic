    <!-- Footer -->
    <footer>
        <div class="footer-content">
            <div class="footer-section">
                <h3>MediConnect</h3>
                <p>Your trusted online healthcare partner</p>
            </div>
            <div class="footer-section">
                <h4>Quick Links</h4>
                <ul>
                    <li><a href="/Home/Index">Home</a></li>
                    <li><a href="/Home/Services">Services</a></li>
                    <li><a href="/Home/Doctors">Doctors</a></li>
                    <li><a href="/Home/About">About</a></li>
                    <li><a href="/Home/Contact">Contact</a></li>
                </ul>
            </div>
            <div class="footer-section">
                <h4>Contact Info</h4>
                <p>Email: info@mediconnect.com</p>
                <p>Phone: +20 123 456 7890</p>
            </div>
        </div>
        <div class="footer-bottom"><p>&copy; 2025 MediConnect. All rights reserved.</p></div>
    </footer>

    <!-- Absolute path to JS so static file is requested from wwwroot -->
    <script src="/js/consultation-script.js" defer></script>
</body>
</html>