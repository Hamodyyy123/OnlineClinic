@{
    ViewData["Title"] = "Login";
    Layout = null;
}
<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>@ViewData["Title"] - OnlineClinic</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
</head>
<body>
    <div class="login-page">
        <!-- animated background layers (pure CSS + JS parallax via CSS vars) -->
        <div class="bg-layer layer-1" aria-hidden="true"></div>
        <div class="bg-layer layer-2" aria-hidden="true"></div>
        <div class="bg-particles" aria-hidden="true"></div>

        <div class="login-wrapper" role="main">
            <div class="login-card login-card-large" id="loginCard" aria-labelledby="loginTitle">
                <header class="login-brand">
                    <div class="brand-logo" aria-hidden="true">OC</div>
                    <div class="brand-title">
                        <h1 id="loginTitle" class="mb-0">OnlineClinic</h1>
                        <small class="text-muted">Sign in to manage appointments & consultations</small>
                    </div>
                </header>

                <section class="login-body card-body">
                    <form id="loginForm" autocomplete="off" novalidate>
                        <div class="form-row">
                            <div class="form-field" data-name="username">
                                <input id="username" name="username" type="text" class="form-control" placeholder=" " aria-label="Username" required />
                                <label for="username">Username</label>
                                <div class="focus-underline" aria-hidden="true"></div>
                            </div>

                            <div class="form-field" data-name="password">
                                <input id="password" name="password" type="password" class="form-control" placeholder=" " aria-label="Password" required />
                                <label for="password">Password</label>
                                <div class="focus-underline" aria-hidden="true"></div>
                            </div>

                            <div id="loginError" class="alert alert-danger alert-login d-none" role="alert" aria-live="polite"></div>

                            <div class="d-grid">
                                <button type="submit" id="loginBtn" class="btn-cta" aria-label="Sign in">
                                    <span class="btn-text">Sign in</span>
                                </button>
                            </div>

                            <div class="login-footer text-center mt-3">
                                <small class="text-muted">Need an account? Contact the clinic administrator.</small>
                            </div>
                        </div>
                    </form>
                </section>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/Login.js" asp-append-version="true"></script>
</body>
</html>